{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
      "baseUrl": ".",
  "paths": {
    "@/*": ["./src/*"],
    "@/bot/*": ["./src/bot/*"],
    "@/web/*": ["./src/web/*"],
    "@/shared/*": ["./src/shared/*"]
  },
  "moduleResolution": "node"
  },
  "include": ["src/bot/**/*", "src/shared/**/*"],
  "exclude": ["node_modules", "dist", "src/web/**/*"]
} 